<Window x:Name="AddVarWindow" x:Class="HmiExample.AddVar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Var" SizeToContent="WidthAndHeight" Height="90" Topmost="True" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" ResizeMode="NoResize" Closing="AddVarWindow_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbVarName" HorizontalAlignment="Left" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
        <StackPanel Margin="0" Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="btnOk" Content="Ok" Margin="10,0" HorizontalAlignment="Right" IsDefault="True" Width="100" Height="20" VerticalAlignment="Top" Click="btnOk_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" HorizontalContentAlignment="Center" IsCancel="True" Width="100" Margin="0" Click="btnCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
